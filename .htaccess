# Disable directory browsing
Options -Indexes

# Prevent access to sensitive files
<FilesMatch "^\.|\.(sql|log|sh|bak|json|meta)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to app, src, and storage directories
RewriteRule ^(app|src|storage|vendor)/ - [F,L]

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect all requests to index.php if they aren't real files/dirs
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]
</IfModule>

# PHP settings (if allowed by host)
<IfModule mod_php8.c>
    php_value max_execution_time 30
    php_value upload_max_filesize 5M
    php_value post_max_size 5M
</IfModule>

# Basic caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
</IfModule>
